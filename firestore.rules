// Firestore Security Rules for TestMemo
// Deploy these rules to your Firebase project

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Memos collection - public read/write for demo purposes
    // In production, you should implement proper authentication
    match /memos/{memoId} {
      allow read, write: if true;
      
      // For authenticated users only (uncomment when implementing auth):
      // allow read, write: if request.auth != null;
      
      // For specific user access (when implementing user system):
      // allow read, write: if request.auth != null && request.auth.uid == resource.data.createdBy;
    }
    
    // Deny all other requests
    match /{document=**} {
      allow read, write: if false;
    }
  }
}